
@{
    ViewBag.Title = "Forget";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<section class="bg-home bg-primary d-flex align-items-center">
    <div class="bg-overlay bg-overlay-white"></div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-8">
                <div class="card shadow rounded border-0">
                    <div class="card-body">
                        <h4 class="card-title text-center"> اعتبارسنجی حساب کاربری </h4>

                        <form class="login-form mt-4" method="post">
                            <div class="row">
                                <div class="col-lg-12">
                                    <p class="text-muted">کد اعتبارسنجی دریافت شده خود را وارد کنید.</p>
                                    <div class="mb-3">
                                        <label class="form-label">کد اعتبارسنجی <span class="text-danger">*</span></label>
                                        <div class="form-icon position-relative">
                                            <i data-feather="code" class="fea icon-sm icons"></i>
                                            <input type="text" class="form-control ps-5" placeholder="کد اعتبارسنجی دریافت شده را وارد کنید." name="code" required="">
                                        </div>
                                    </div>
                                </div><!--end col-->
                                <div class="col-lg-12">
                                    <div class="d-grid">
                                        <button class="btn btn-primary" type="submit">ارسال </button>
                                    </div>
                                </div><!--end col-->
                                <div class="mx-auto">
                                    <p class="mb-0 mt-3"><small class="text-dark me-2">کد اعتبارسنجی را دریافت نکرده‌اید! </small> <a href="#" class="text-dark fw-bold">درخواست کد اعتبارسنجی </a></p>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div><!--end col-->
        </div><!--end row-->
    </div> <!--end container-->
</section><!--end section-->