    <!-- Back to top -->
    <a href="#" onclick="topFunction()" id="back-to-top" class="btn btn-icon btn-primary back-to-top"><i data-feather="arrow-up" class="icons"></i></a>
    <!-- Back to top -->
    <script src="~/landrik/js/bootstrap.bundle.min.js"></script>
    <script src="~/landrik/js/tiny-slider.js"></script>
    <script src="~/landrik/js/feather.min.js"></script>
    <script src="~/landrik/js/switcher.js"></script>
    <script src="~/landrik/js/plugins.init.js"></script>
    <script src="~/landrik/js/app.js"></script>
    @if (IsSectionDefined("Scripts"))
    {
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/jquery/dist/jqueryBlockUI.js"></script>
        <script src="~/assets/plugins/sweetalert2/dist/sweetalert2.min.js"></script>
        <script src="~/js/site.js"></script>
        @await RenderSectionAsync("Scripts", required: false)
    }
